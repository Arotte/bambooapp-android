<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".onboarding.OnboardingActivity">



    <TextView
        android:id="@+id/tvHello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello there!"
        android:fontFamily="@font/roboto"

        android:layout_marginTop="60dp"
        android:layout_marginStart="40dp"
        android:textSize="40sp"
        android:textColor="@color/bbgreen"
        android:textFontWeight="800"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginStart="40dp"
        android:fontFamily="@font/roboto"
        android:text="@string/onboarding_hellp"
        android:textColor="@color/bbgreen"
        android:textSize="21sp"
        android:layout_marginEnd="40dp"
        />

    <TextView
        android:id="@+id/tvHelloMore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="40dp"
        android:fontFamily="@font/roboto"
        android:text="But first, I would need some information about you"
        android:textColor="@color/bbgreen"
        android:textSize="15sp"
        android:layout_marginEnd="40dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_weight="1"
            android:hint="First Name"
            android:inputType="text"
            android:fontFamily="@font/roboto"
            android:drawablePadding="12dp"
            android:background="@drawable/custo_input"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="13dp"
            android:paddingBottom="13dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="15dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Last Name"
            android:layout_weight="1"
            android:inputType="text"
            android:fontFamily="@font/roboto"
            android:drawablePadding="12dp"
            android:background="@drawable/custo_input"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="13dp"
            android:paddingBottom="13dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="30dp"/>

    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Your Email Address"
        android:inputType="textEmailAddress"
        android:fontFamily="@font/roboto"
        android:drawablePadding="12dp"
        android:background="@drawable/custo_input"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="13dp"
        android:paddingBottom="13dp"
        android:layout_marginTop="40dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivBamboo"
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:src="@drawable/bamboo1concerned"
            android:layout_marginStart="-120dp"
            android:layout_marginTop="40dp"
            android:rotation="30"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnNext"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:text="Next"
            app:cornerRadius="100dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="40dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>
